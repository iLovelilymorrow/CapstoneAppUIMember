<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CapstoneAppUIMember.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CapstoneAppUIMember.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Shell.BackgroundColor="#747474"
    Shell.TabBarBackgroundColor="Green">

    <TabBar>
        <ShellContent ContentTemplate="{DataTemplate views:HomeView}" Route="Home" Title="Home"/>
        <ShellContent ContentTemplate="{DataTemplate views:ChangePasswordView}" Route="ChangePassword" Title="ChangePassword"/>
        <ShellContent ContentTemplate="{DataTemplate views:SignUpView}" Route="SignUp" Title="SignUp"/>
        <ShellContent ContentTemplate="{DataTemplate views:SignInView}" Route="SignIn" Title="SignIn"/>
        <ShellContent ContentTemplate="{DataTemplate views:ForgotPasswordView}" Route="ForgotPassword" Title="ForgotPassword"/>
        <ShellContent ContentTemplate="{DataTemplate views:TestView2}" Route="TEST2" Title="TEST2"/>
    </TabBar>

</Shell>
