<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CapstoneAppUIMember.Views.TestView2"
             Title="TestView2">
    
    <VerticalStackLayout>

        <Grid Padding="200" RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*">

            <Label Grid.Row="0" Text="ART'S GYM" FontSize="32" HorizontalOptions="Center"/>

            <Entry Grid.Row="1" Placeholder="EMAIL"/>

            <Entry Grid.Row="2" Placeholder="PASSWORD" IsPassword="True"/>

            <Button Grid.Row="3" Text="LOGIN" BackgroundColor="Black" TextColor="White"/>

            <FlexLayout Grid.Row="4" JustifyContent="SpaceBetween">
                <Label Text="FORGOT PASSWORD?" TextDecorations="Underline"/>
                <Label Text="CREATE?" TextDecorations="Underline"/>
            </FlexLayout>

        </Grid>
        
    </VerticalStackLayout>
    
</ContentPage>