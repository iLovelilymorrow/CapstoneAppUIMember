<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CapstoneAppUIMember.Views.ReceiptsView"
             BackgroundColor="#747474">

    <VerticalStackLayout>
        
        <Button ImageSource="notificationwhite64.png" BackgroundColor="Black" BorderColor="Black" WidthRequest="200" HeightRequest="100" Text="NOTIFICATIONS" TextTransform="Uppercase" FontSize="20" FontAttributes="Bold" FontFamily="Bebas-Regular"/>

        <Frame x:Name="notificationFrame"
       BackgroundColor="Black"
               BorderColor="Black"
       CornerRadius="15"
       WidthRequest="200"
       HeightRequest="100"
       Margin="0,20,0,0"   
       HasShadow="True">
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Image Source="notificationwhite64.png" WidthRequest="32" HeightRequest="32" />
                <Label Text="NOTIFICATIONS"
               FontSize="20"
               FontFamily="Bebas-Regular"
               TextColor="White"
               HorizontalOptions="Center" />
            </VerticalStackLayout>

            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
            </Frame.GestureRecognizers>
        </Frame>

    </VerticalStackLayout>
    
</ContentPage>