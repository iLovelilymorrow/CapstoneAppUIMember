<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CapstoneAppUIMember.Views.ChangePasswordView"
             BackgroundColor="#747474"
             xmlns:styles="clr-namespace:CapstoneAppUITest.Resources.Styles">

    <VerticalStackLayout>

        <Label Text="CHANGE PASSWORD" TextColor="Black" FontSize="43" FontFamily="Bebas-Regular" Margin="0,50,0,0" HorizontalOptions="Center"/>

        <Label Text="ENTER NEW PASSWORD" TextColor="Black" FontSize="33" FontFamily="Bebas-Regular" Margin="0,140,0,10" HorizontalOptions="Center"/>

        <Frame Padding="3" BackgroundColor="Black" BorderColor="Black" CornerRadius="40" WidthRequest="430" HeightRequest="45" HorizontalOptions="Center">

            <Frame CornerRadius="40" Padding="5,5,5,0">
                <styles:BorderlessEntry PlaceholderColor="#545454" WidthRequest="370" HeightRequest="50" FontSize="20" VerticalOptions="Center" HorizontalOptions="Center"
                Margin="0,0,0,4" HorizontalTextAlignment="Center"/>
            </Frame>

        </Frame>

        <Label Text="CONFIRM PASSWORD" TextColor="Black" FontSize="33" FontFamily="Bebas-Regular" Margin="0,70,0,10" HorizontalOptions="Center"/>

        <Frame Padding="3" BackgroundColor="Black" BorderColor="Black" CornerRadius="40" WidthRequest="430" HeightRequest="45" HorizontalOptions="Center">

            <Frame CornerRadius="40" Padding="5,5,5,0">
                <styles:BorderlessEntry PlaceholderColor="#545454" WidthRequest="370" HeightRequest="50" FontSize="20" VerticalOptions="Center" HorizontalOptions="Center"
        Margin="0,0,0,4" HorizontalTextAlignment="Center"/>
            </Frame>

        </Frame>

        <Frame BackgroundColor="Black" BorderColor="Black" CornerRadius="40" HorizontalOptions="Center" Padding="60,5,60,10" Margin="0,25,0,0">
            <Label Text="CHANGE PASSWORD" TextColor="White" FontFamily="Bebas-Regular" FontSize="50" HorizontalOptions="Center" VerticalOptions="Center"/>
        </Frame>

    </VerticalStackLayout>

</ContentPage>