<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CapstoneAppUIMember.Views.SignInView"
             BackgroundColor="#747474"
             xmlns:styles="clr-namespace:CapstoneAppUITest.Resources.Styles">


    <VerticalStackLayout>

        <Image WidthRequest="220" HeightRequest="220" BackgroundColor="Brown" Margin="0,60,0,0" HorizontalOptions="Center"/>

        <Label Text="ART'S GYM" TextColor="Black" FontSize="43" FontFamily="Bebas-Regular" Margin="0,10,0,0" HorizontalOptions="Center"/>

        <Label Text="EMAIL ADDRESS" TextColor="Black" FontSize="33" FontFamily="Bebas-Regular" Margin="0,20,0,10" HorizontalOptions="Center"/>

        <Frame Padding="3" BackgroundColor="Black" BorderColor="Black" CornerRadius="40" WidthRequest="400" HeightRequest="45" HorizontalOptions="Center">

            <Frame CornerRadius="40" Padding="5,5,5,0">
                <styles:BorderlessEntry PlaceholderColor="#545454" WidthRequest="350" HeightRequest="50" FontSize="20" VerticalOptions="Center" HorizontalOptions="Center"
                                Margin="0,0,0,4" HorizontalTextAlignment="Center"/>
            </Frame>

        </Frame>

        <Label Text="PASSWORD" TextColor="Black" FontSize="33" FontFamily="Bebas-Regular" Margin="0,10,0,10" HorizontalOptions="Center"/>

        <Frame Padding="3" BackgroundColor="Black" BorderColor="Black" CornerRadius="40" WidthRequest="400" HeightRequest="45" HorizontalOptions="Center">

            <Frame CornerRadius="40" Padding="5,5,5,0">
                <styles:BorderlessEntry PlaceholderColor="#545454" WidthRequest="350" HeightRequest="50" FontSize="20" VerticalOptions="Center" HorizontalOptions="Center"
                        Margin="0,0,0,4" HorizontalTextAlignment="Center"/>
            </Frame>

        </Frame>

        <Frame BackgroundColor="Black" BorderColor="Black" CornerRadius="40" HorizontalOptions="Center" Padding="150,5,150,10" Margin="0,30,0,0">
            <Label Text="LOGIN" TextColor="White" FontFamily="Bebas-Regular" FontSize="50" HorizontalOptions="Center" VerticalOptions="Center"/>
        </Frame>

        <Label Text="FORGOT PASSWORD?" TextColor="Black" FontSize="25" FontFamily="Bebas-Regular" Margin="0,5,0,10" HorizontalOptions="Center"/>

        <Label Text="DON'T HAVE AN ACCOUNT?" TextColor="Black" FontSize="25" FontFamily="Bebas-Regular" Margin="0,55,0,5" HorizontalOptions="Center"/>

        <Frame BackgroundColor="Black" BorderColor="Black" CornerRadius="40" HorizontalOptions="Center" Padding="80,5,80,10">
            <Label Text="CREATE" TextColor="White" FontFamily="Bebas-Regular" FontSize="25" HorizontalOptions="Center" VerticalOptions="Center"/>
        </Frame>

    </VerticalStackLayout>
    
</ContentPage>